{
  "editor.formatOnSave": true,
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "solidity.formatter": "forge",
  "solidity.compileUsingRemoteVersion": "v0.8.27+commit.40a35a09",
  "prettier.configPath": "package.json",
  "solidity.remappings": [
    "@chainlink/contracts/=lib/chainlink-brownie-contracts/contracts/src/",
    "@forge-std/=lib/forge-std/src/",
    "@royco/=lib/royco/src/",
    "@solady/=lib/solady/src/",
    "@solmate/=lib/solmate/src/",
    "@uniswap/v3-core/=lib/v3-core/",
    "@uniswap-v3-oracle/=lib/uniswap-v3-oracle/",
    "@pythnetwork/pyth-sdk-solidity/=lib/pyth-sdk-solidity/"
  ],
  "solidity-va.tools.surya.option.negModifiers": false,
  "solidity-va.preview.markdown": true,
  "slither.solcPath": "",
  "slither.hiddenDetectors": [],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/out/**": true
  }
}